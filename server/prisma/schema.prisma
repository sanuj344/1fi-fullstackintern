generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  description String
  mrp         Decimal
  price       Decimal
  imageUrl    String
  variants    Variant[]
  emiPlans    EmiPlan[]
}

model Variant {
  id        String  @id @default(uuid())
  productId String
  storage   String
  color     String
  product   Product @relation(fields: [productId], references: [id])
}

model EmiPlan {
  id            String   @id @default(uuid())
  productId     String
  monthlyAmount Decimal
  tenureMonths  Int
  interestRate  Float
  cashback      Decimal
  product       Product  @relation(fields: [productId], references: [id])
}
